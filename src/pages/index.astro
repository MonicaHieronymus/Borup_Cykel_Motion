<style>
  .grayboxtext{
    color: var(--primary-lgray);
}
.firstimg{
    grid-row: span 2;
    object-fit:fill;
}
.vises{
    display: flex;
    justify-content: center;
  }
  video {
    width: 90%;
    margin: 0 1rem;
}
.imggrid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    margin-top: 1rem;
    margin-bottom: 2rem;
}
.køredage{
    margin: auto;
    align-self: center;
}


    .news {
        font-family: 'Sofia Sans Variable', sans-serif;
        color: #ffff;
        margin-top: -14rem;
        text-align: center;
        position: absolute;
        z-index: 1;
    }
    
        .gallery {
            display: flex;
            overflow-x: scroll;
        }
    
        .gallery div {
            width: 150%;
            margin-top: 6rem;
            flex: none;
            margin-bottom: 3.5rem;
            margin-left: 2.5rem;
        }
    
        .gallery div img {
            transition: transform 0.5s;
            width: 50%;
        }
        .gallery-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 2rem;
            background: #383838;
        }
    
        #backBtn, #nextBtn {
            width: 40px;
            cursor: pointer;
            margin: 10px;
        }
    
    @media (min-width: 599px) {
      .indexgrid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        margin-top: 1rem;
        margin-bottom: -2rem;
        align-items: center;
    }
    .news {
        font-family: 'Sofia Sans Variable', sans-serif;
        color: #ffff;
        margin-top: -4rem;
        margin-bottom: 20rem;
        margin-right: 50rem;
        position: absolute;
        z-index: 1;
    }
    
        .gallery {
            width: 900px;
            display: flex;
            overflow-x: scroll;
            margin: -4rem;
        }
    
        .gallery div {
            width: 45%;
            display: grid;
            grid-template-columns: auto auto auto;
            margin-bottom: 10rem;
            margin-left: 3.6rem;
            flex: none;
            padding: 10px;
        }
    
        .gallery div img {
            width: 100%;
            transition: transform 0.5s;
            margin-top: 6rem;
        }
    
        .gallery:: -webkit-scrollbar{
            display: none;
        }
    
        .gallery-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 5rem;
            background: #383838;
        }
    
        #backBtn, #nextBtn {
            width: 48px;
            cursor: pointer;
            margin: 65px;
            margin-top: 5.5rem;
        }
    
        .gallery div img:hover {
            cursor: pointer;
            transform: scale(1.1);
        }
        
        }
    </style>
    
    <script>import { extractDirectives } from "../../node_modules/astro/dist/runtime/server/hydration";
    
    let scrollContainer = document.querySelector(".gallery");
    let backBtn = document.getElementById("backBtn");
    let nextBtn = document.getElementById("nextBtn");
    
    nextBtn.addEventListener("click", ()=>{
        scrollContainer.scrollLeft += 900;
    })
    
    backBtn.addEventListener("click", ()=>{
        scrollContainer.scrollLeft -= 900;
    })
    
    </script>
