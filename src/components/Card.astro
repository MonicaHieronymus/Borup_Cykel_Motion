---
const {data}= Astro.props;
---
<a href={`news/${data.slug}`}>
<article>
<div>
    <img src={data.img} alt={data.title}>
</div>
</article>
</a>

<style>

img {
      margin: 15rem;
      margin-left: 2rem;
      margin-top: 4rem;
      margin-bottom: 2rem;
      border-radius: 0;
    }
@media (min-width: 599px) { 
    
    img {
      margin: 9.5rem;
      margin-top: 6rem;
      margin-bottom: 2rem;
      border-radius: 0;
    }
    img:hover {
            cursor: pointer;
            transform: scale(1.1);
     }
        
        } 
</style>
