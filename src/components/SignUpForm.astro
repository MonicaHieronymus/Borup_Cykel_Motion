<h1>Indmelding</h1>
<section>
  <form method="get">
    <label for="name">Navn:</label>
    <input type="text" id="name" name="name" required /><br />

    <label for="lastname">Efternavn:</label>
    <input type="text" id="lastname" name="lastname" required /><br />

    <label for="email">E-mail</label>
    <input type="email" id="email" placeholder="din.mail@mail.dk" /><br />

    <label for="phone">Telefon:</label>
    <input type="tel" id="phone" name="phone" required /><br />

    <label for="bday">FÃ¸dselsdag</label>
    <input type="date" id="bday" /><br />
    <label for="adress">Adresse</label>
    <input type="text" id="adress" /><br />
    <div class="checkbox">
      <label for="terms">Jeg accepterer klubbens <a href="/private_policies" target="_blank">privatlivspolitik</a></label>
      <input type="checkbox" id="terms" />
    </div><br />
    <button>Tilmeld</button>
  </form>
</section>

<style>
  h1 {
    background-color: var(--primary-dgreen);
    color: var(--primary-lgray);
    padding: 1rem 1rem;
    margin: 1.5rem;
    margin-bottom: -1.5rem;
    margin-top: 2rem;
  }
  section {
    border: 1px solid var(--secondary-black);
    padding: 2rem 2rem;
    display: flex;
    justify-content: center;
    margin: 1.5rem;
    margin-bottom: 2rem;
  }

  form {
    position: relative;
  }
  input,
  label {
    display: block;
    border-radius: 5px;
  }

  input {
    padding: 0.5rem;
    width: 100%;
    border-style: solid;
  }

  input:hover {
    border-color: var(--primary-orange);
  }

  .checkbox {
    display: inline-block;
  }
  button {
    background-color: var(--primary-orange);
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    border: none;
    color: var(--primary-lgray);
    display: inline-block;
    padding: 0.5rem 0.5rem;
  }

  @media (min-width: 599px) {
    input {
      padding: 0.5rem;
      width: 35rem;
    }

    section, h1 {
      margin: 2rem;
    }
   
    h1{
      margin-bottom: -2rem;
    }
  }
</style>
