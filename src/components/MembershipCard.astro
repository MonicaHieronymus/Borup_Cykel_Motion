---
const { header } = Astro.props;
const { price } = Astro.props;
---

<section>
  <h3>{header}</h3>
  <h4>{price}</h4>
  <p class="small_text">Beløb dækker kalenderåret</p>
  <button> <a href="/signup_membership">Tilmeld</a></button>
</section>

<style>
  section {
    border: 1px solid var(--secondary-black);
    padding: 2rem 2rem;
    text-align: center;
  }

  button {
    background-color: var(--secondary-orange);
    border-radius: 5px;
    text-align: center;
    text-decoration: none;
    border: none;

    display: inline-block;
    padding: 0.5rem 0.5rem;
  }

  a {
    text-decoration: none;
    color: var(--primary-lgray);
  }

  a:hover {
    text-decoration: underline;
  }
</style>
