---
import Card from "./Card.astro";
---
<article>
    <div class="gallery-wrap">
        <img src="SVG/button_left.svg" id="backBtn" alt="">
        <h1 class="news">Seneste ture</h1>
  
        <Card />

        <img src="SVG/button_right.svg" id="nextBtn" alt="">
    </div>
    </article>


<style>

.news {
        font-family: 'Sofia Sans Variable', sans-serif;
        color: #ffff;
        margin-top: -14rem;
        text-align: center;
        position: absolute;
        z-index: 1;
    }  
.gallery {
            display: flex;
            overflow-x: scroll;
        }

.gallery div {
            width: 150%;
            margin-top: 6rem;
            flex: none;
            margin-bottom: 3.5rem;
            margin-left: 2.5rem;
        }
    
        .gallery div img {
            transition: transform 0.5s;
            width: 50%;
        }
 .gallery-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 2rem;
            background: #383838;
        }
    
        #backBtn, #nextBtn {
            width: 40px;
            cursor: pointer;
            margin: 10px;
        }
        
        @media (min-width: 599px) { 
            .news {
        font-family: 'Sofia Sans Variable', sans-serif;
        color: #ffff;
        margin-top: -4rem;
        margin-bottom: 20rem;
        text-align: center;
        position: absolute;
        z-index: 1;
        font-size: 30px;
    }
            .gallery {
            width: 900px;
            display: flex;
            overflow-x: scroll;
            margin: -4rem;
        }
    
        .gallery div {
            width: 45%;
            display: grid;
            grid-template-columns: auto auto auto;
            margin-bottom: 10rem;
            margin-left: 3.6rem;
            flex: none;
            padding: 10px;
        }
    
        .gallery div img {
            width: 100%;
            transition: transform 0.5s;
            margin-top: 6rem;
            align-items: center;
        }
    
        .gallery:: -webkit-scrollbar{
            display: none;
        }

        .gallery div img:hover {
            cursor: pointer;
            transform: scale(1.1);
        }
            .gallery-wrap {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 5rem;
            background: #383838;
        }
    
        #backBtn, #nextBtn {
            width: 48px;
            cursor: pointer;
            margin: 2rem;
            margin-top: 5.5rem;
            z-index: 1;
        }
        
        } 

</style>    

<script>import { extractDirectives } from "../../node_modules/astro/dist/runtime/server/hydration";

 let scrollContainer = document.querySelector(".gallery");
 let backBtn = document.getElementById("backBtn");
 let nextBtn = document.getElementById("nextBtn");
 
 nextBtn.addEventListener("click", ()=>{
     scrollContainer.scrollLeft += 900;
 })
 
 backBtn.addEventListener("click", ()=>{
     scrollContainer.scrollLeft -= 900;
 })
 
 </script>
